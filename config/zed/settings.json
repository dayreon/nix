// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"features": {
		"inline_completion_provider": "none"
	},
	"assistant": {
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-3-5-sonnet-latest"
		},
		"version": "2"
	},
	"base_keymap": "VSCode",
	"ui_font_size": 16,
	"buffer_font_size": 16,
	"buffer_font_family": "GeistMono Nerd Font",
	//"relative_line_numbers": true,
	"tab_bar": {
		"show": true
	},
	"scrollbar": {
		"show": "never"
	},
	"indent_guides": {
		"enabled": true,
		"coloring": "indent_aware"
	},
	"centered_layout": {
		"left_padding": 0.15,
		"right_padding": 0.15
	},
	"inlay_hints": {
		"enabled": false
	},
	"languages": {
		"TypeScript": {
			"inlay_hints": {
				"enabled": false,
				"show_parameter_hints": false,
				"show_other_hints": false,
				"show_type_hints": false
			}
		}
	},
	"terminal": {
		"env": {
			"EDITOR": "zed --wait"
		}
	},
	"file_types": {
		"Dockerfile": ["Dockerfile", "Dockerfile.*"],
		"JSON": ["json", "jsonc", "*.code-snippets"]
	},
	"file_scan_exclusions": [
		"**/.git",
		"**/.svn",
		"**/.hg",
		"**/CVS",
		"**/.DS_Store",
		"**/Thumbs.db",
		"**/.classpath",
		"**/.settings",
		// above is default from Zed
		"**/out",
		"**/dist",
		"**/.husky",
		"**/.turbo",
		"**/.vscode-test",
		"**/.vscode",
		"**/.next",
		"**/.storybook",
		"**/.tap",
		"**/.nyc_output"
		//"**/node_modules"
	],
	// Move all panel to the right
	"project_panel": {
		"button": true,
		"dock": "left",
		"git_status": true
	},
	"outline_panel": {
		"dock": "right"
	},
	"collaboration_panel": {
		"dock": "left"
	},
	// Move some unnecessary panels to the left
	"notification_panel": {
		"dock": "left"
	},
	"chat_panel": {
		"dock": "left"
	},
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"theme": {
		"mode": "system",
		"light": "One Light",
		"dark": "Tomorrow Night"
	},
	"formatter": {
		"language_server": {
			"name": "biome"
		}
	}
}
